
.desc-container{
  position: fixed;
  z-index: 10;
  width: 100%;
  height: 100vh;
  background-color: #fff;
  left: 0;
  top: 0;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.desc-title{
  width: 100%;
  text-align: center;
  padding-top: 60rpx;
  padding-bottom: 60rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: 500
}

.desc{
  font-size: 32rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 40rpx;
}

.desc-close-wrapper{
  position: fixed;
  left: 50%;
  bottom: 60rpx;
  transform: translateX(-50%);
  padding: 30rpx;
}

.desc-close{
  width: 118rpx;
  height: 118rpx;
}
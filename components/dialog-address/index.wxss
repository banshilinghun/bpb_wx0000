.rule-dialog {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

.rule-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2;
}

.rule-mask-active{
  opacity: 0.5;
}

.rule-content-wrapper {
  position: fixed;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 3;
  width: 84%;
  background-color: #fff;
  border-radius: 10rpx;
}

.content-root{
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 180rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.address-wrapper{
  width: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.phone-wrpper{
  width: 100%;
  font-size: 30rpx;
  color: #1aad19;
  padding-top: 20rpx;
  font-weight: bold;
  text-align: center;
}

.btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  border-radius: 0rpx;
  font-size: 36rpx;
  border-top: 0.5px solid #ddd;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  color: #1aad19;
}

button::after {
  border: none;
}

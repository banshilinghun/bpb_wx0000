/* components/share-moment/index.wxss */

.moment-root{
  width: 100%;
  z-index: 11;
}

.canvas {
  width: 100%;
  position: fixed;
  top: 9999rpx;
  left: 0;
}

/* components/dialog/bpb-dialog.wxss */

/*弹窗*/

.share-model .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  min-height: 100vh;
  z-index: 99;
  background: rgba(0, 0, 0, 0.6);
}


.share-conetent{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-top: 80rpx;
  padding-bottom: 80rpx;
  left: 15%;
  z-index: 100;
  top: 0;
}

.share-image{
  border-radius: 10rpx;
  margin: 0 auto;
}

.btn-save-local{
  background: none;
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  background-color: #ff555c;
  margin-top: 40rpx;
  color: #ffffff;
  font-size: 32rpx;
  border: none;
}

.close-wrppper{
  position: fixed;
  right: 0;
  top: 0;
  padding: 20rpx;
  z-index: 99;
}

.close-image{
  width: 50rpx;
  height: 50rpx;
}

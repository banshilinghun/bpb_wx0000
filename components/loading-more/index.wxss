
.no-more {
  height: 100rpx;
  width: 100%;
  position: relative;
  background-color: rgba(236, 235, 242, 0.7);
}

.no-more-wrapper {
  padding: 0 30rpx;
  height: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(236, 235, 242, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #999;
}

.no-more-line {
  position: absolute;
  width: 80%;
  top: 50%;
  left: 10%;
  height: 1rpx;
  background-color: #ccc;
}

.load-more {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(236, 235, 242, 0.7);
}

.weui-loadmore__tips{
  font-size: 24rpx;
  color: #999;
}
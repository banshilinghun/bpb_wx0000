
.rule-dialog {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top:0;
}

.rule-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2;
}

.rule-dialog-wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 3;
}

.rule-content-wrapper {
  margin: 40rpx 4%;
  width: 84%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx 30rpx 40rpx 30rpx;
}

.rule-content-root{
  line-height: 1.2;
  margin-bottom: 10rpx;
}

.rule-content{
  font-size: 28rpx;
  color: #333333;
}

.rule-image{
  width: 100%;
}

.rule-btn{
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #FF555C;
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 36rpx;
  margin-top: 20rpx;
  
}

.rule-btn-unable{
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #ccc;
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 36rpx;
  margin-top: 20rpx;
}

button::after{
  border: none;
}


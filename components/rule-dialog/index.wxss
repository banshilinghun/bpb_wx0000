
.rule-dialog {
  width: 100vw;
  height: 100vh;
  position: fixed;
}

.rule-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2;
}

.rule-dialog-wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 3;
}

.rule-content-wrapper {
  margin: 40rpx 8%;
  width: 84%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
}

.rule-content-root{
  line-height: 1.2;
  margin-bottom: 10rpx;
}

.rule-content{
  font-size: 28rpx;
  color: #333333;
}

.rule-image{
  width: 100%;
}

.rule-btn{
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #FF555C;
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 36rpx;
  margin-top: 20rpx;
}

button::after{
  border: none;
}


.table-wrapper{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  flex-direction: row;
  border-left: 1rpx solid #979797;
  border-top: 1rpx solid #979797;
}

.table-title-color{
  background-color: #eee;
}

.table-content-color{
  background-color: #fff;
}

.rule-table{
  width: 50%;
  height: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
  align-items: center;
  border-bottom: 1rpx solid #979797;
  border-right: 1rpx solid #979797;
}

.rule-table-text{
  color: #333;
  font-size: 24rpx;
}
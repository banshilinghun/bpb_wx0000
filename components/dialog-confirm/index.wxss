
.info-dialog{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  z-index: 12;
}

.info-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
}

.root{
  position: fixed;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 13;
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 10rpx;
}


button{
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  display: inline-block;
  font-size: 32rpx;
  padding: 0;
}

button::after{
  border: none;
}

.bottom-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.model-back{
  background-color: #ccc;
  color: #fff;
  margin-right: 60rpx;
}

.model-sure{
  background-color: #ff555c;
  color: #fff;
}

.dialog-title{
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.content-main-wrapper{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-main{
  text-align: left;
  font-size: 28rpx;
  color: #666;
}

.content-second{
  color: #666;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}
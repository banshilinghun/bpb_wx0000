.rule-dialog {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

.rule-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2;
}

.rule-mask-active{
  opacity: 0.5;
}

.root{
  position: fixed;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 3;
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content-wrapper {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.content-root{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ff555c;
  font-size: 36rpx;
  border-radius: 8rpx;
  color: #fff;
}

button::after {
  border: none;
}

.auth-image{
  width: 100%;
}

.content{
  width: 100%;
  min-height: 180rpx;
  font-size: 36rpx;
  font-weight: 400;
  position: relative;
}

.text-divider{
  line-height: 1.2;
}

.text{
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
  position: absolute;
  text-align: center;
}

.vertical-line{
  width: 4rpx;
  height: 40rpx;
  background-color: #fff;
}

.colse {
  width: 80rpx;
  height: 80rpx;
  z-index: 99;
  margin-top: 80rpx;
}
.rule-dialog {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

.rule-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2;
}  

.rule-mask-active{
  opacity: 0.5;
}

.root{
  position: fixed;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 3;
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center
}

.content-wrapper {
  width: 100%;
  padding: 5rpx;
  background-color: #fff
}

.content-root{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn {
  height: 70rpx;
  line-height: 70rpx;
  width: 50%;
  font-size: 28rpx;
  border-radius: 40rpx;
  color: #fff;
  border: 1px solid #FD500D;
  background-color: #fff;
  color: #FD500D;
  margin: 40rpx auto
}

.auth-image{
  width: 100%;
}

.title{
  text-align: center;
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-top: 50rpx
}

.content{
  width: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  box-sizing: border-box
}

.content-padding{
  padding: 20rpx 40rpx 0 40rpx
}

.text-divider{
  line-height: 1.2;
}

.vertical-line{
  width: 4rpx;
  height: 40rpx;
  background-color: #fff
}

.colse {
  width: 50rpx;
  height: 50rpx;
  z-index: 99;
  margin-top: 120rpx;
}
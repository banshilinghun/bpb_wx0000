@import "../../common/ui/common.wxss";
page{
  background: #fff;
}
.apply-choice{
    width: 30rpx;
    height: 30rpx;
    margin-right: 12rpx;
    vertical-align: text-bottom;
}
view{
    font-size: 30rpx;
    font-weight: 300;
}
.body{
    padding: 25rpx 25rpx 0;
    background-color: #fff;
}
.radio-group{
    position: relative;
    /* display: flex; */
    width: 100%;
    height: 70rpx;
    color:#ff5a39;
    text-align:center;
}
.radio{
    display: inline-block;
    /* flex: 1; */
    height: 100%;
    border-color: #ff5a39;
    border-width: 1rpx 1rpx 1rpx 0;
    border-style: solid;
    color: #ff5a39;
    text-align: center;
    line-height: 70rpx;
    box-sizing: border-box;
    width: 24.88%
}
.radio:first-child{
    border-left: 1px solid #ff5a39;
    border-top-left-radius: 8rpx;
    border-bottom-left-radius: 8rpx;
    
}
.radio:last-child{
    border-top-right-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}
.radio-item{
    position: absolute;
    left: -99999rpx;
    top: -99999rpx;
    height: 0;
    width: 0;
    visibility: hidden;
}
.type-group{
    position: relative;
    width: 100%;
    text-align: justify;
    color:#695f9b;
    overflow: hidden;
}
.type-item{
    position: absolute;
    left: -99999rpx;
    top: -99999rpx;
    height: 0;
    width: 0;
    visibility: hidden;
}
.type-label{
    display: inline-block;
    margin:0 25rpx 25rpx;
    width: 137.5rpx;
    height: 65rpx;
    line-height: 65rpx;
    text-align: center;
    border-radius: 8rpx;
    border: 1px solid #ff5a39;
}
.active{
    background-color: #ff5a39;
    color: #fff;
    transition: all .3s;
}
.mar-top-60{
    margin-top: 60rpx;
}

.disabled{
    border-color: #aaa;
    background-color: #f0f0f0;

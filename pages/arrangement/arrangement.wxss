/* 弹窗 */
.rule-dialog {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

.rule-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2;
}

.rule-mask-active{
  opacity: 0.5;
}

.root{
  position: fixed;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 3;
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content-wrapper {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
}

.content-root{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}

.title-tip{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.btn-wrapper{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 0;
  background-color: #fff;
  border-top: 1rpx solid #ddd;
  color: #333;
  font-weight: 400;
}

.btn-cancel{
  border-right: 1rpx solid #ddd;
  border-bottom-left-radius: 10rpx;
}

.btn-sure{
  border-bottom-right-radius: 10rpx;
}

button::after {
  border: none;
}

.content{
  width: 100%;
  min-height: 120rpx;
  font-size: 36rpx;
  position: relative;
}

.text-divider{
  line-height: 1.2;
  font-size: 28rpx;
  color: #666;
}

.theme-color{
  color: #ff555c;
  line-height: 1;
}

.text{
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
  position: absolute;
  text-align: center;
}

.vertical-line{
  width: 4rpx;
  height: 40rpx;
  background-color: #fff;
}


.brand-wrapper{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  min-height: 120rpx;
}

.brand-logo{
  width: 60rpx;
  height: 60rpx;
}

.brand-name{
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #333;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 60rpx;
  padding-left: 30rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_brand {
  display: flex;
  background-color: #fff;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  align-items: center;
  flex-direction: row;
  font-size: 34rpx;
  color: #333;
}

.brand-child-logo{
  width: 150rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.brand-child-name{
  margin-left: 30rpx;
}

/* 弹框 */
.rule-dialog {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
}

.rule-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2;
}

.rule-mask-active{
  opacity: 0.5;
}

.root{
  position: fixed;
  height: auto;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 3;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content-wrapper {
  width: 100%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.content-root{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.btn {
  width: 50%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #FD500D;
  padding: 0;
  font-size: 32rpx;
  border-radius: 8rpx;
  color: #fff;
}

button::after {
  border: none;
}

.content{
  width: 100%;
  min-height: 180rpx;
  font-size: 36rpx;
  font-weight: 400;
  position: relative;
}

.text{
  width: 100%;
  top: 50%;
  transform: translateY(-50%);
  position: absolute;
  text-align: center;
}

.vertical-line{
  width: 4rpx;
  height: 40rpx;
  background-color: #fff;
}

.colse {
  width: 80rpx;
  height: 80rpx;
  z-index: 99;
  margin-top: 80rpx;
}

.brand-title{
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333;
}

.brand-scroll-view{
  max-height: 500rpx;
  padding-top: 30rpx;
  margin-bottom: 30rpx;
}

.radio{
  display: block;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.radio-group{
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
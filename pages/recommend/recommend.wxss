/* pages/recommend/recommend.wxss */

.recommend-container {
  width: 100%;
  margin-bottom: 20rpx;
}

.flex-container{
  display: flex;
}

.flex-column{
  flex-direction: column;
}

.flex-column-reverse{
  flex-direction: column-reverse;
}

.image-wrapper{
  margin: 20rpx;
}

.topImage{
  width: 100%;
  border-radius: 10rpx;
}

.recommend-rule {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
}

.rule-detail{
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.rule-title {
  font-size: 32rpx;
  font-weight: 500;
}

.margin-top-step{
  margin-top: 18rpx;
}

.rule-one {
  display: flex;
  flex-direction: row;
}

.rule-one-text {
  font-size: 28rpx;
  color: #666;
}

.text-block {
  margin-top: 15rpx;
}

.high-light-text {
  font-size: 28rpx;
}

.share-container {
  width: 100%;
  height: 210rpx;
  display: flex;
  flex-direction: row;
}

.share-wrapper {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.share-layout{
  height: 100%;
  line-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.share-icon {
  width: 116rpx;
  height: 116rpx;
}

.share-text{
  font-size: 26rpx;
  margin-top: 15rpx;
}

.recommend-split-line{
  width: 95%;
  height: 4rpx;
  margin-left: 5%;
}

.recommend-result{
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.recommend-success{
  height: 70rpx;
  display: flex;
  align-items: center;
}

.get-award-wrapper {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.get-award-text{
  font-size: 30rpx;
}

.btn-common {
  line-height: 65rpx;
  height: 65rpx;
  font-size: 32rpx;
  color: #ff555c;
  background-color: #fff;
  border-radius: 6rpx;
  display: inline-block;
  margin-left: 40rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  position: absolute;
  right: 0rpx;
  border: 1rpx solid #ff555c;
}

button::after {
  border: none;
}

.remind-friend {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.remind-text {
  font-size: 30rpx;
}

.list-wrapper{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.recommend-list-item {
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 75rpx;
  position: relative;
}

.recommend-friend-title {
  color: black;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  border-radius: 50%;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
  width: 250rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.install-ad {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
}

.time {
  font-size: 26rpx;
  color: #666;
  position: absolute;
  right: 20rpx;
}

.divider{
  width: 100%;
  height: 15rpx;
  background-color: #f2f2f2;
}

.recommendList-line{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 87%;
  height: 2rpx;
  background-color: #e5e5e5;
}

.split-line{
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
}

.recommend-people{
  margin-left:30rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.dark-color{
  color: #333;
}

.black-color{
  color: black;
}

.gray-color{
  color: #666;
}

.theme-color{
  color: #ff555c;
}

.share-color{
  color: #7F7F7F;
}

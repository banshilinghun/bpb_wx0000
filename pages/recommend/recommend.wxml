  <block wx:for="{{banner.bannerList}}" wx:key="item.id">
    <swiper-item>
      <image src="{{item}}" mode="{{scaleToFill}}" style='height:{{banner.bannerHeight+"px"}};width:{{banner.bannerWidth+"px"}}' bindtap='bannerClick'></image>
    </swiper-item>

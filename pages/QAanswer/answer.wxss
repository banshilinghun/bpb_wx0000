
.answer-container{
  
}

.wrapper{
  padding: 20rpx 40rpx 20rpx 40rpx;
}

.answer-text{
  font-size: 32rpx;
  color: #333333;
}

.QA-title{
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.QA-text{
  font-size: 28rpx;
  color: #333333;
  display: block;
}

.QA-text-inline{
  font-size: 28rpx;
  color: #333333;
}

.bold{
  font-weight: 500;
}

.blue-color{
  color: blue;
}

.QA-official{
  width: 100%;
  display: flex;
  position: relative;
  align-items: center;
}

.QA-parse-wrapper{
  height: 100%;
  display: flex;
  align-items: center;
  position: absolute;
  right: 0;
}

.QA-parse{
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0;
  border-radius: 10rpx;
  background-color: #fff;
  color: #333;
  font-size: 24rpx;
  border: 2rpx solid #333;
}

button::after{
  border: none;
}

.divider{
  width: 100%;
  height: 10rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  background-color: #f6f6f6;
}

.answer-reco-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  color: #333;
  font-weight: bold;
}

.answer-reco-image{
  width: 100%;
  margin-top: 30rpx;
  -moz-box-shadow: 0px 0px 8px #ccc;
  -webkit-box-shadow: 0px 0px 8px #ccc;
  box-shadow: 0px 0px 8px #ccc;
  border-radius: 5rpx;
}
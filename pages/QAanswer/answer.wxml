<view class='answer-container'>
  <view class='wrapper'>
    <text class='answer-text'>{{ answer }}</text>
  </view>

  <view class='wrapper' wx:if='{{ flag == "contact" }}'>
    <view data-phoneNumber='400-888-3390'>
      <text class='QA-text-inline bold'>奔跑宝全国客服热线：</text>
      <text class='QA-text-inline bold'>400-888-3390</text>
    </view>
    <view class='QA-official'>
      <text class='QA-text bold'>微信公众号：奔跑宝</text>
    </view>
    <view>
      <text class='QA-text bold'>微信客服号(小荷)：benpaobao888</text>
    </view>
    <view>
      <text class='QA-text bold sub-item'>微信客服号(小婷)：taoxiaoxiao1011</text>
    </view>
  </view>

  <view wx:if='{{ flag == "reconsider" }}'>
    <view class='divider'></view>
    <view class='wrapper'>
      <view class='answer-reco-title'>
        <text>车身广告合法证明文件</text>
      </view>
      <block wx:for='{{ reconList }}' wx:key='{{ reconsider }}'>
        <image class='answer-reco-image' mode='widthFix' src='{{ item }}' bindtap='previewImage' data-image='{{ item }}' data-index='{{ index }}'></image>
      </block>
    </view>
  </view>
</view>
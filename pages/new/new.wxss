
page{
  background: #f6f6f6
}

.b-me-container{

}

.b-me-header{
  padding: 30rpx;
  background: #fff
}

.b-header-wrapper{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
  background: linear-gradient(45deg, #ff555c, #FB653D);
  box-shadow: 0px 3px 10px #aaa
}

.b-header-user{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx
}

.b-header-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1rpx solid #fff
}

.b-header-detail{
  margin-left: 20rpx;
  flex: 1;
}

.b-user-name{
  color: #fff;
  font-size: 36rpx
}

.b-user-palte{
  color: #fff;
  font-size: 24rpx;
  opacity: 0.8
}

.b-header-auth-status{
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx
}

.b-header-income{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
  box-sizing: border-box
}

.b-user-balance{
  flex: 1;
}

.b-balance-wrapper{
  text-align: center;
  color: #fff
}

.b-balance-title{
  font-size: 24rpx
}

.b-balance-number{
  font-size: 36rpx;
  font-weight: 500;
  margin-top: 20rpx
}

.b-me-income{
  margin-top: 20rpx;
  background: #fff
}

.b-me-panel{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx
}

.b-panel-title{
  color: #333;
  font-size: 32rpx;
  font-family: "微软雅黑";
  font-weight: bold;
  flex: 1
}

.b--panel-right{
  color: #999;
  font-size: 24rpx
}

.b-me-cell{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}

.b-cell-item{
  width: 33.3%
}

.b-cell-wrapper{
  text-align: center;
  padding: 30rpx 0
}

.b-cell-image{
  width: 50rpx;
  height: 50rpx
}

.b-cell-action{
  color: #666;
  font-size: 24rpx
}

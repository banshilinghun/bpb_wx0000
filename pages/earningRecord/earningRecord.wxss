
@import '../withdrawRecord/withdrawRecord.wxss';

.b-earning-container{
  margin-bottom: 60px;
}

.b-earning-title{
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: black
}

.step-container{
  margin-bottom: 20rpx;
  padding: 30rpx
}

.step-empty{
  width: 100%;
  min-height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.step-empty-image{
  width: 100rpx;
  height: 100rpx;
}

.step-empty-text{
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

.b-divider{
  width: 100%;
  height: 20rpx;
  background: #f6f6f6;
}

.b-record-footer{
  background: linear-gradient(45deg, #ff555c, #FB653D);
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0
}

.b-record-footer-item{
  flex: 1;
  height: 60px;
  line-height: 60px;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500
}
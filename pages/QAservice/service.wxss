
.service-container{
  height: 100vh;
  width: 100%;
  background-color: #F6F6F6;
  padding-top: 20rpx;
}

.service-wrapper{
  background-color: #fff;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: left;
  min-height: 140rpx;
  padding: 24rpx 10rpx 24rpx 30rpx;
}

.service-image-wrapper{
  width: 92rpx;
  height: 92rpx;
}

.service-image{
  width: 100%;
  height: 100%;
}

.text-wrapper{
  flex: 1;
  margin-left: 20rpx;
}

.text1{
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  line-height: 40rpx;
}

.text2{
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
}

button::after{
  border: none;
}

.service-container{
  height: 100vh;
  width: 100%;
  background-color: rgba(236, 235, 242, 0.7);
  padding-top: 30rpx;
}

.service-wrapper{
  background-color: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: left;
  height: 180rpx;
  padding: 24rpx 30rpx 24rpx 30rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.service-image-wrapper{
  width: 130rpx;
  height: 130rpx;
}

.service-image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.text-wrapper{
  flex: 1;
  margin-left: 30rpx;
}

.text1{
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  line-height: 40rpx;
}

.text2{
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
}

button::after{
  border: none;
}

.service-arrow-wrapper{
  height: 100%;
  display: flex;
  align-items: center;
}

.service-arrow{
  height: 32rpx;
  width: 32rpx;
}

.care-banner{
  width: 100%;
}

.b-divider{
  height: 40rpx;
  width: 100%
}

.b-divider-top{
  height: 20rpx;
  width: 100%
}

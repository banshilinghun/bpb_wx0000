/* pages/joinList/joinList.wxss */
@import '../../weui.wxss';

page{
  background: rgba(236, 235, 242, 0.7)
}

.root-container {
  width: 100%;
  background: #fff;
}

.join-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.join-item {
  width: 100%;
  height: 110rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.join-avatar {
  width: 70rpx;
  height: 70rpx;
  margin-left: 40rpx;
  border-radius: 35rpx;
}

.join-name {
  flex: 1;
  margin-right: 40rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.join-time {
  margin-right: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.join-divider {
  width: 75%;
  height: 1rpx;
  margin-left: 140rpx;
  background-color: #e5e5e5;
  position: absolute;
  bottom: 0rpx;
}

.no-more {
  height: 100rpx;
  width: 100%;
  position: relative;
  background-color: rgba(236, 235, 242, 0.7);
}

.no-more-wrapper {
  padding: 0 30rpx;
  height: 100%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(236, 235, 242, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #999;
}

.no-more-line {
  position: absolute;
  width: 80%;
  top: 50%;
  left: 10%;
  height: 1rpx;
  background-color: #ccc;
}

.load-more {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(236, 235, 242, 0.7);
}

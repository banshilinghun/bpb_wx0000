/* pages/joinList/joinList.wxss */

@import '../../weui.wxss';

.root-container{
  width: 100%;
}

.join-wrapper{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.join-item{
  width: 100%;
  height: 110rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.join-avatar{
  width: 70rpx;
  height: 70rpx;
  margin-left: 40rpx;
  border-radius: 35rpx;
}

.join-name{
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #666666;
}

.join-time{
  position: absolute;
  right: 40rpx;
  font-size: 28rpx;
  color: #999999;
}

.join-divider{
  width: 75%;
  height: 1rpx;
  margin-left: 140rpx;
  background-color: #e5e5e5;
  position: absolute;
  bottom: 0rpx;
}

.no-more{
  height: 60rpx;
  width: 100%;
  position: relative;
  background-color: #e5e5e5;
}

.no-more-wrapper{
  width: 40%;
  height: 100%;
  position: absolute;
  left: 30%;
  background-color: #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-more-text{
  font-size: 24rpx;
  color: #999999;
}

.no-more-line{
  position: absolute;
  width: 80%;
  top: 50%;
  left: 10%;
  height: 1rpx;
  background-color: #999999;
}

.load-more{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e5e5e5;
}


page{
  background: rgba(236, 235, 242, 0.7);
  padding-bottom: 40rpx
}

.b-header-wrapper{
  background: #ff555c;
  box-shadow: 0px 3px 10px #aaa
}

.b-header-user{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 40rpx
}

.b-header-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  background: rgba(236, 235, 242, 0.7);
}

.b-header-detail{
  margin-left: 20rpx;
  flex: 1;
}

.b-user-name-wrapper{
  display: flex;
  flex-direction: row;
  align-items: center
}

.b-user-name{
  max-width: 300rpx;
  font-weight: bold;
  color: #fff;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.b-user-palte{
  color: #fff;
  font-size: 24rpx;
  opacity: 0.8
}

.b-header-auth-status{
  width: 88rpx;
  height: 32rpx;
  margin-left: 20rpx
}

.b-header-auth-status-error{
  width: 88rpx;
  height: 40rpx;
  margin-left: 20rpx
}

.b-income-container{
  background: linear-gradient(180deg, #ff555c, rgba(236, 235, 242, 0.7));
  padding-top: 20rpx;
}

.b-header-income{
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  margin: 0 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 2px 4px #ddd
}

.b-user-balance{
  flex: 1;
}

.b-balance-wrapper{
  text-align: center;
  color: #666;
  position: relative;
}

.b-red-dot{
  position: absolute;
  background: #f00;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  right: 70rpx;
  top: -5rpx
}

.b-balance-title{
  font-size: 24rpx
}

.b-balance-number{
  font-size: 50rpx;
  color: #333;
  font-weight: bolder;
  font-family: "微软雅黑";
  margin-top: 5rpx;
  line-height: 1.2
}

.b-me-income{
  background: #fff;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 8px #ddd;
  padding: 10rpx
}

.b-me-panel{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx
}

.b-panel-title{
  color: #333;
  font-size: 32rpx;
  font-family: "微软雅黑";
  font-weight: bold;
  flex: 1
}

.b--panel-right{
  color: #999;
  font-size: 24rpx
}

.b-me-cell{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap
}

.b-cell-item{
  width: 33.3%
}

.b-cell-wrapper{
  text-align: center;
  padding: 20rpx 0
}

.b-cell-image{
  width: 60rpx;
  height: 60rpx
}

.b-cell-action{
  color: #666;
  font-size: 24rpx
}

.b-unit{
  font-size: 24rpx;
  margin-left: 5rpx
}

<view>
  <view class="amount">
    <view class="message__list">
      <block>
        <view class="item2 item3 item4">
          <view class="item-middle">
            <view>
              <text class="title">待收收益</text>
            </view>
          </view>
        </view>
      </block>
      <view class="twxtawd">
       <view class='step-container'>
  <amount-steps type="vertical" hasDesc steps="{{stepsList}}" bind:action='actionClickListener'></amount-steps>
</view>
      </view>
      <view class="line"></view>
      <block>
        <view class="item2 item3">
          <view class="item-middle">
            <view>
              <text class="title">余额</text>
            </view>
            <view class="myad-li">
              <view class="message">
                <label class="data-text">¥ {{amount}}</label>
              </view>
            </view>
          </view>
          <view class="item_right item_right1">
            <button class='wtwabt wtwabt2' bindtap="withdraw">
              <text> 提 现</text>
            </button>
          </view>
        </view>
        <view class="line"></view>
      </block>
      <block>
        <view class="item2 item3">
          <view class="item-middle">
            <view>
              <text class="title">累计收益</text>
            </view>
            <view class="myad-li">
              <view class="message">
                <label class="data-text">¥ {{total}}</label>
              </view>
            </view>
          </view>
          <view class="item_right1 item_right2">
            <text>超过了{{rate}}%的同行</text>
          </view>
        </view>
        <view class="line"></view>
      </block>
    </view>
  </view>
  <view class="profile-wrapper" catchtap="loadProfile">
    <block wx:for="{{myProfile}}" wx:key="item.id">
      <view class="profile" id="{{item.id}}" bindtap="kindToggle">
        <image class="itemicon" src="{{item.icon}}"></image>
        <view class="profile-item"> {{item.desc}} </view>
        <view class="deposit-text" wx:if="{{item.deposit==1}}">
          <text wx:if="{{haveDeposit==1}}">已缴纳</text>
          <text wx:if="{{haveDeposit==0}}">未缴纳</text>
        </view>
        <image wx:if="{{item.deposit==0}}" class="profile-arrow" src="/image/arrow.png"></image>
      </view>
    </block>
    <block>
      <button bindtap='recommendFriendListener' class='share-button'>
        <image class='itemicon' src='../../image/shmgc.png'></image>
        <text class='profile-item'>推荐好友</text>
        <image class='profile-arrow' src='/image/arrow.png'>
        </image>
      </button>
    </block>
  </view>
  <!-- <button class="btn-quit" bindtap="exit"> <text wx:if="{{loginFlag==1}}">退出当前账户</text> <text wx:if="{{loginFlag==0}}">登录</text></button> -->
</view>
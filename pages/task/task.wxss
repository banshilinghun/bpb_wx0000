.b-task-container {
  width: 100%;
  background: #fff;
}

.b-task-content {
  margin: 30rpx;
  box-shadow: 0 0 20rpx #ddd;
  border-radius: 8rpx;
}

.b-cotnent-detail {
  padding: 40rpx;
}

.b-task-status-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.b-task-tip {
  flex: 1;
  color: #333;
  font-size: 36rpx;
  font-weight: 500;
  font-family:"微软雅黑";
}

.b-task-status {
  color: #ff555c;
  font-size: 36rpx;
  font-weight: 500;
  font-family:"微软雅黑";
}

.b-content-margin{
  margin-top: 30rpx
}

.b-subscribe-info {
  display: flex;
  flex-direction: row;
  align-items: center
}

.b-time-image {
  width: 24rpx;
  height: 24rpx
}

.b-time-text {
  flex: 1;
  color: #666;
  font-size: 24rpx;
  margin-left: 10rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
  white-space: nowrap;
  margin-right: 40rpx
}

.b-go-map {
  display: flex;
  flex-direction: row;
  align-items: center
}

.b-map-image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 5rpx;
}

.b-map-text {
  color: #ff5a39;
  font-size: 28rpx;
  font-weight: 500;
}

.b-address{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 8rpx
}

.b-location-distance{
  color: #666;
  font-size: 24rpx
}

.b-overtime-tip{
  color: #ff555c;
  font-size: 24rpx;
  text-align: left;
  padding: 30rpx 0 0 0
}

.b-need-wait-text{
  color: #666;
  font-size: 24rpx;
  margin-left: 10rpx
}

.b-audit-info{
  display: flex;
  flex-direction: row;
  align-items: flex-start
}

.b-audit-image{
  width: 30rpx;
  height: 30rpx;
  margin-top: 5rpx
}

.b-auditing{
  flex: 1;
  color: #999;
  font-size: 28rpx;
  margin-left: 20rpx
}

.b-audit-fail{
  font-size: 28rpx;
  color: #ff555c;
  text-align: left
}

.b-run-tip{
  color: #333;
  font-size: 36rpx;
  font-weight: 500;
  font-family:"微软雅黑";
}

.b-run-income{
  flex: 1;
  font-size: 32rpx;
  color: #ff555c;
  margin-left: 20rpx
}

.b-run-income-tip{
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx
}

.b-run-detail{
  display: flex;
  flex-direction: row;
  padding: 30rpx 0
}

.b-run-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center
}

.b-run-top{
  display: flex;
  align-items: flex-end;
}

.b-run-item-left{
  color: #ff555c;
  font-size: 60rpx;
  line-height: 1;
  font-weight: 600
}

.b-run-item-right{
  color: #ff555c;
  font-size: 26rpx;
  margin-left: 10rpx
}

.b-run-item-bottom{
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx
}

/* 已完成 */
.b-task-ad-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #ddd;
}

.b-task-image {
  width: 80rpx;
  height: 80rpx;
  background: #f6f6f6;
}

.b-task-ad-info {
  flex: 1;
  margin-left: 20rpx;
}

.b-info-name {
  color: #666;
  font-size: 28rpx;
}

.b-info-date {
  margin-top: 5rpx;
  color: #999;
  font-size: 24rpx;
}

.b-action-btn {
  display: inline-block;
  padding: 0 20rpx;
  outline: none;
  margin: 0;
  background: #eee;
  color: #333;
  font-family: "微软雅黑";
  font-size: 26rpx;
  font-weight: 500
}

.b-action-cancel {
  margin-right: 10rpx;
}

button::after {
  border: none;
}

/* 已结束 start */

.b-task-title {
  color: #333;
  font-size: 40rpx;
  font-weight: 600;
  font-family:"微软雅黑";
  padding: 30rpx 0 0 30rpx;
}

.finish-container {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
}

.ad-image {
  width: 128rpx;
  height: 128rpx;
  background-color: #eee;
  border-radius: 5rpx;
}

.ad-finish-item {
  width: 100%;
  margin-left: 20rpx;
}

.ad-name {
  color: #333;
  font-family: "微软雅黑";
  font-weight: bold;
  font-size: 36rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
  white-space: nowrap;
  max-width: 400rpx;
}

.ad-middle {
  font-size: 24rpx;
  color: #888;
  margin-top: 10rpx;
  margin-bottom: 5rpx;
  position: relative;
}

.b-ad-middle-left {
  display: inline-block;
}

.ad-income {
  display: inline-block;
}

.ad-money {
  display: inline-block;
  color: #ff555c;
}

.ad-status {
  position: absolute;
  right: 0;
  font-size: 24rpx;
  color: #999;
  display: inline-block;
}

.ad-time {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ad-time-title {
  font-size: 24rpx;
  color: #888;
}

.ad-time-detail {
  color: #ff555c;
  font-size: 24rpx;
}

/* 已结束 over */


.b-declare-cell{
  padding: 20rpx 40rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center
}

.b-cell-title{
  min-width: 200rpx;
  font-size: 28rpx;
  color: #333
}

.b-cell-content{
  flex: 1;
  font-size: 28rpx;
  color: #666
}

.b-declare-line{
  position: absolute;
  right: 0;
  left: 40rpx;
  bottom: 0;
  height: 2rpx;
  background: #ddd
}

.b-reason-wrapper{
  padding: 30rpx 40rpx
}

.b-declare-reason-title{
  font-size: 30rpx;
  color: #333
}

.b-declare-reason-detail{
  margin-top: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx;
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx
}

.b-declare-divider{
  width: 100%;
  height: 12rpx;
  background: rgba(236, 235, 242, 0.7)
}

.b-picture-wrapper{
  padding: 30rpx 40rpx
}

.b-declare-picture-wrapper{
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  background: rgba(236, 235, 242, 0.7);
  border-radius: 5rpx;
  box-shadow: 0 0 10rpx #ccc;
}

.b-commit-btn-wrapper{
  padding: 15px
}

.b-commit-btn{
  height: 44px;
  line-height: 44px;
  background: #ff555c;
  padding: 0;
  margin: 0;
  font-size: 32rpx;
  color: #fff;
  border-radius: 10rpx;
}

button::after{
  border: none;
}

.b-declare-arrow{
  width: 30rpx;
  height: 30rpx
}

.b-picker{
  flex: 1
}

.b-picker-item{
  color: #666;
  font-size: 28rpx
}

/**app.wxss**/

@import 'components/index.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.shareit {
    -webkit-user-select: none;
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    text-align: center;
    top: 0;
    left: 0;
    z-index: 6666;
}
.arrow {
    position: absolute;
    right: 5%;
    top: 1%;
}
.shareit image{
    max-width: 100%;
}
.share-text {
    margin-top: 300px;
}